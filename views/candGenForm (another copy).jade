doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Responsive form styled with flexbox
    style.
      /* NOTE: The styles were added inline because Prefixfree needs access to your styles and they must be inlined if they are on local disk! */
      /* General */
      * {
      margin: 0;
      padding: 0;
      }
      html {
      font-size: 90%;
      }
      body {
      background-color: #ededed;
      color: #561032;
      min-width:20em;
      font-family: Arial, Helvetica, sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      }
      *,
      *::before,
      *::after {
      box-sizing: border-box;
      }
      header h1,
      header h4 {
      text-align: center;
      padding: .5em;
      }
      header h1 {
      font-size: 200%;
      }
      header h4 {
      font-size: 110%;
      }
      header a {
      color: #561032;
      }
      .descr {
      display: block;
      }
      .surveyForm {
      max-width: 70em;
      margin: 0 auto;
      }
      .surveyForm .descr {
      margin: .5em
      }
      .fieldset div div {
      margin: .5em 0;
      font-size: 90%
      }
      .fieldset .input-text label {
      display: block;
      width: 8.7em
      }
      .input-text input {
      width: 100%;
      height: 3em;
      margin-right: 1em;
      border: 1px solid #d9d9d9;
      }
      .input-text input:focus {
      outline: 1px solid #BD1550;
      }
      .radio-button-group input,
      .checkbox-group input {
      width: 3em;
      }
      .fieldset {
      border: 1px solid #d9d9d9;
      padding: 1em;
      margin: .5em;
      background-color: #f9f9f9;
      color: #8d1a51;
      /*box-shadow: 0px 0px 5px 1px #561032;*/
      border-radius: .5em
      }
      .fieldset h4 {
      display: block;
      font-size: 110%;
      font-weight: normal;
      color: #561032;
      padding: .5em 0;
      }
      .fieldset h4 small {
      font-size: 80%;
      }
      .fieldset h4 * {
      display: inline;
      }
      input[type="range"] {
      width: 100%;
      }
      input[type="submit"] {
      padding: 1em 2em;
      font-size: 1rem;
      background-color: #BD1550;
      color: white;
      margin-left: .5em;
      border: none;
      }
      p {
      line-height: 1.5em;
      }
      /* ::before counter*/
      .surveyForm {
      counter-reset: index;
      margin-bottom: 2em;
      }
      .fieldset h4 {
      counter-increment: index;
      }
      .fieldset h4::before {
      content: counter(index) ". ";
      margin: .2em;
      }
      /* ::before counter*/
      /*  FLEXBOX		*/
      .surveyForm * {
      display: flex;
      }
      .surveyForm {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      }
      .wrapper {
      flex: 0 1 100%;
      flex-direction: column;
      }
      .fieldset {
      flex-direction: column;
      }
      .fieldset:last-of-type {
      flex-grow: 1;
      }
      .input-text input {
      min-width: 60%;
      }
      div[class*='group'] {
      flex-direction: row;
      flex-wrap: wrap;
      }
      div[class*='group'] div[class^='input'] {
      flex: 0 1 100%;
      }
      @media only screen and (min-width: 65rem) {
      .col-1 div[class*='group'] div[class^='input'] {
      flex: 0 1 100%;
      }
      .col-2 div[class*='group'] div[class^='input'] {
      flex: 0 1 50%;
      }
      .col-3 div[class*='group'] div[class^='input'] {
      flex: 0 1 33%;
      }
      .col-4 div[class*='group'] div[class^='input'] {
      flex: 0 1 25%;
      }
      }
      @media only screen and (min-width:50rem) {
      .wrapper {
      flex: 0 1 50%;
      }
      }
      @media only screen and (max-width:65rem) and (min-width:50rem) {
      .col-1 div[class*='group'] div[class^='input'] {
      flex: 0 1 100%;
      }
      .col-2 div[class*='group'] div[class^='input'] {
      flex: 0 1 100%;
      }
      .col-3 div[class*='group'] div[class^='input'] {
      flex: 0 1 50%;
      }
      .col-4 div[class*='group'] div[class^='input'] {
      flex: 0 1 50%;
      }
      }
      @media only screen and (max-width:50rem) and (min-width:35rem) {
      .col-1 div[class*='group'] div[class^='input'] {
      flex: 0 1 100%;
      }
      .col-2 div[class*='group'] div[class^='input'] {
      flex: 0 1 50%;
      }
      .col-3 div[class*='group'] div[class^='input'] {
      flex: 0 1 33%;
      }
      .col-4 div[class*='group'] div[class^='input'] {
      flex: 0 1 25%;
      }
      }
      /*checkboxes & radio buttons*/
      div[class^='input'] {
      position: relative;
      align-items: center;
      }
      input[ type=checkbox],
      input[ type=radio] {
      position: absolute;
      left: -1000em;
      }
      input[ type=checkbox] + label::before,
      input[ type=radio] + label::before {
      content: "";
      width: .7em;
      height: .7em;
      border: 1px solid #ddd;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 .5em 0 0;
      padding: 0;
      position: relative;
      font-size: 150%;
      background-color: white;
      }
      input[ type=checkbox]:checked + label::before {
      content: "\02713";
      color: #BD1550;
      font-weight: bolder;
      }
      input[ type=radio] + label::before {
      border-radius: 50%;
      width: .8em;
      height: .8em;
      }
      input[ type=radio]:checked + label::before {
      padding: 2px;
      background-clip: content-box;
      background-color: #BD1550;
      }
      /*checkboxes & radio buttons*/
      /*   Input type range */
      .input-range {
      justify-content: space-between;
      }
      .input-range input[type="range"] {
      width: 80%;
      }
      .input-range input[type="range"]:focus {
      outline: none;
      }
      input[type='range'],
      input[type='range']::-webkit-slider-runnable-track,
      input[type='range']::-webkit-slider-thumb {
      -webkit-appearance: none;
      }
      /*  Input type range THUMB */
      input[type=range]::-webkit-slider-thumb {
      background-color: #555;
      width: 10px;
      height: 20px;
      border: 3px solid #F9F9F7;
      cursor: pointer;
      margin-top: -9px;
      }
      input[type=range]::-moz-range-thumb {
      background-color: #555;
      width: 5px;
      height: 20px;
      border: 3px solid #F9F9F7;
      cursor: pointer;
      }
      input[type=range]::-ms-thumb {
      background-color: #555;
      width: 10px;
      height: 20px;
      border: 3px solid #F9F9F7;
      cursor: pointer;
      }
      /* 3 Input type range TRACK */
      input[type=range]::-webkit-slider-runnable-track {
      background-color: #555;
      height: 3px;
      }
      input[type=range]:focus::-webkit-slider-runnable-track {
      outline: none;
      }
      input[type=range]::-moz-range-track {
      background-color: #555;
      height: 3px;
      }
      input[type=range]::-ms-track {
      background-color: #555;
      height: 3px;
      }
      input[type=range]::-ms-fill-lower {
      background-color: #BD1550;
      }
      input[type=range]::-ms-fill-upper {
      background-color: black;
      }
